<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateNight.Views.CoffeePage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Image Source="coffee_main" Margin="0,20"/>
            <Border Stroke="gray" StrokeThickness="1" >
                <Entry x:Name="txtCoffee" Placeholder="Enter total cost of Coffee: " Keyboard="Numeric"/>
            </Border>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>